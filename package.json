{
  "author": "Spotify",
  "name": "web-api-auth-examples",
  "description": "Basic example of the Spotify authorization flow through OAuth 2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js",
    "stop": "docker-compose --project-name spoty stop",
    "docker": "docker-compose --project-name spoty up -d --build --force-recreate --remove-orphans"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.3.2",
    "cors": "^2.8.4",
    "cron": "^1.7.1",
    "express": "^4.16.0",
    "handlebars": "^4.1.2",
    "helmet": "^3.20.0",
    "jquery": "^3.4.1",
    "mongoose": "^5.5.7",
    "request": "^2.83.0"
  },
  "standard": {
    "ignore": [
      "/public/handlebars.min.js",
      "/public/jquery.min.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      ".github",
      ".gitlab",
      ".vscode/",
      ".DS_Store",
      ".gitignore",
      ".directory",
      "Dockerfile",
      "desktop.ini",
      ".dockerignore",
      "node_modules/",
      ".gitlab-ci.yml",
      "docker-compose.yml"
    ],
    "env": {
      "NODE_ENV": "DEVELOPMENT"
    },
    "ext": "html,pug,css,styl,js,ts,vue,json"
  }
}
