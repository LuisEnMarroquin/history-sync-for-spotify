{
  "author": "Spotify",
  "name": "web-api-auth-examples",
  "description": "Basic example of the Spotify authorization flow through OAuth 2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js",
    "stop": "docker-compose --project-name spoty stop",
    "docker": "docker-compose --project-name spoty up -d --build --force-recreate --remove-orphans",
    "database": "docker volume create mongo; docker volume create mongoc; docker run -d --name mongo -p 27017:27017 -v mongo:/data/db -v mongoc:/data/configdb mongo:latest;"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.3.2",
    "cors": "^2.8.4",
    "cron": "^1.7.2",
    "dotenv": "^8.1.0",
    "express": "^4.16.0",
    "handlebars": "^4.3.1",
    "helmet": "^3.21.1",
    "jquery": "^3.4.1",
    "mongoose": "^5.7.1",
    "popper.js": "^1.15.0",
    "request": "^2.83.0"
  },
  "standard": {
    "globals": [
      "$",
      "self",
      "alert",
      "cache",
      "fetch",
      "caches",
      "Handlebars"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      ".github",
      ".gitlab",
      ".vscode/",
      ".DS_Store",
      ".gitignore",
      ".directory",
      "Dockerfile",
      "desktop.ini",
      ".dockerignore",
      "node_modules/",
      ".gitlab-ci.yml",
      "docker-compose.yml"
    ],
    "ext": "html,pug,css,styl,js,ts,vue,json"
  }
}
